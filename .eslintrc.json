{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint",
    "react",
    "react-hooks"
  ],
  "extends": [
    "airbnb-typescript"
  ],
  "parserOptions": {
    "project": ["src/tsconfig.json", "service-worker/tsconfig.json"],
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "no-plusplus": "off",
    "no-underscore-dangle": "off"
  }
}
